:84 {
    # Root directory for static sites
    root * /srv
    
    # Enable file server with directory browsing
    file_server browse {
        hide .env .git
    }
    
    # Security headers
    header {
        X-Frame-Options "SAMEORIGIN"
        X-XSS-Protection "1; mode=block"
        X-Content-Type-Options "nosniff"
        Referrer-Policy "no-referrer-when-downgrade"
        X-Powered-By "Caddy Static Server"
    }
    
    # Handle SPA routing for subdirectories (if dist folders contain SPAs)
    @spa_routes path_regexp ^/([^/]+)/.*$
    handle @spa_routes {
        try_files {path} /{re.1}/index.html
    }
    
    # Default try_files behavior
    try_files {path} {path}/index.html
    
    # Compression
    encode gzip
    
    # Static file caching
    @static {
        file
        path *.css *.js *.png *.jpg *.jpeg *.gif *.ico *.svg *.woff *.woff2 *.ttf *.eot
    }
    header @static Cache-Control "public, max-age=31536000, immutable"
    
    # Log to file
    log {
        output file /var/log/caddy/access.log
        format json
    }
    
    file_server {
        index index.html index.php
    }
}